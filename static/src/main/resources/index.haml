%html
  %head
    %link{:rel => 'stylesheet', :href => 'bootstrap/css/bootstrap.min.css'}
    %link{:rel => 'stylesheet', :href => 'styles.css'}
    %link{:rel => 'stylesheet', :href => 'gist.css'}
    %title GemJars - An Un-Holy Union

